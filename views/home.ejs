<link rel="stylesheet" href="<%= assetPath('css/home.css') %>">
<link rel="stylesheet" href="<%= assetPath('css/chat_box.css') %>">
<h1>
     <%= assetPath('css/chat_box.css') %>
</h1>
<div id="home-container">
     <section id="feed-posts">
          <h4>Posts</h4>
          <% if(locals.user) { %>
               <form action="/posts/create" method="POST" id="new-post-form">
                    <textarea name="content" cols="30" rows="3" placeholder="Type Here" required></textarea>
                    <input type="submit" value="Post">
               </form>
               <% } %>
                    <div id="post-list-container">
                         <ul>
                              <% for(post of posts) { %>
                                   <%- include('_post') -%>
                                        <% } %>
                         </ul>
                    </div>
     </section>
<!-- To display user friends -->

     <!-- To display users on webite -->
     <section id="users-on-site">
          <% if(locals.user) { %> 
               <section id="user-friends">
                    <h4>Friends</h4>
                    <ul>
                         <li>Abhay</li>
               
                    </ul>
               </section>
               <%}%>


          <h4>User on website</h4>
          <% for(u of all_users) { %>
               <p>
                    <a href="/users/profile/<%=u.id%>">
                         <%=u.name%>
                    </a>
                    <% if(locals.user) { %>
                    <form method="POST" action="/add-friend">
                         <button>Add</button>
                    </form>
                    <% } %>
               </p>
               <% } %>
     </section>
     <%- include('_chat_box') -%>
</div>
<script src="<%= assetPath('js/home_posts.js') %>"></script>

